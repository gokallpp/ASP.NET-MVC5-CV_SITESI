<div class="resume-section-content">
    <h2 class="mb-5 text-center">
        Bana Ulaş!
    </h2>


    <form method="post" class="p-4 border rounded shadow-sm bg-light">
        <div class="mb-3">
            <label for="name" class="form-label">Ad Soyad</label>
            <input type="text"name="AdSoyad" class="form-control" placeholder="Adınızı ve soyadınızı giriniz" required />
        </div>
        <div class="mb-3">
            <label class="form-label">E-posta</label>
            <input type="text" name="Mail" class="form-control" placeholder="E-posta adresinizi giriniz" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Konu</label>
            <input type="text"name="Konu" class="form-control" placeholder="Mesajınızın konusu" required />
        </div>


        <div class="mb-3">
            <label class="form-label">Mesaj</label>
            <textarea  name="Mesaj" class="form-control" rows="5" placeholder="Mesajınızı buraya yazınız" required></textarea>
        </div>
        <button class="btn btn-info w-100">Mesaj Gönder</button>
    </form>
</div>
