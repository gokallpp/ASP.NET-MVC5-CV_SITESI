@using MvcCv.Models.Entity
@model List<TblSosyalMedya>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}






<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Medya Listem</h3>
                            </div>
                           
                            <div class="card-body">
                                <button  class="btn btn-outline-primary" data-toggle="modal" data-target="#Modal1">Yeni Sosyal Medya Hesap Ekle</button>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr class="text-center ">
                                            <th style="width: 10px">#</th>
                                            <th>Sosyal Medya</th>
                                            <th>Link</th>
                                            <th style="width: 40px">Resim</th>
                                            <th>Düzen</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {            
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Ad</td>
                                                <td>@item.Link</td>
                                                <td>@item.Resim</td>
                                                                                                
                                                <td class="text-center ">
                                                    <a class="btn btn-info btn-sm" href="/SosyalMedya/Duzenle/@item.ID">
                                                        <i class="fas fa-pencil-alt"></i>
                                                        Düzenle
                                                    </a>
                                                </td>

                                                <td class="text-center ">
                                                    <a class="btn btn-danger btn-sm" href="/SosyalMedya/Sil/@item.ID">
                                                        <i class="fas fa-trash"></i>
                                                        Sil
                                                    </a>
                                                </td>
                                            </tr>
                                         }

                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>

        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Sosyal Medya Hesabı Ekleme</h2>
                    </div>

                    <form method="post" action="/SosyalMedya/Ekle">
                        <div class="modal-body">
                            <label>Sosyla Medya İsmi</label>
                            <input type="text" name="Ad" class="form-control" />

                            <br />

                            <label>Sosyla Medya Linki</label>
                            <input type="text" name="Link" class="form-control" />

                            <br />

                            <label>İkon</label>
                            <input type="text" name="ikon" class="form-control" />

                            <br />

                            <button class="btn btn-info">Kaydet</button>

                        </div>
                    </form>
                </div>

            </div>

        </div>

    </div>
</body>
</html>

